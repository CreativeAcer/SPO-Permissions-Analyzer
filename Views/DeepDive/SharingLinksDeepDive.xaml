<!-- Views/DeepDive/SharingLinksDeepDive.xaml -->
<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sharing Links Security Audit" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#DC3545" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸ”—" FontSize="24" Foreground="White" Margin="0,0,10,0"/>
                    <StackPanel>
                        <TextBlock Text="Sharing Links Security Audit"
                                  FontSize="18" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Name="txtLinkCount" Text="Analyzing 0 sharing links"
                                  FontSize="12" Foreground="White" Opacity="0.9"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Name="btnRefreshData" Content="ðŸ”„ Refresh"
                           Width="100" Height="30" Margin="0,0,10,0"
                           Background="#28A745" Foreground="White" FontWeight="SemiBold"/>
                    <Button Name="btnExport" Content="ðŸ“Š Export"
                           Width="100" Height="30"
                           Background="#17A2B8" Foreground="White" FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Summary Stats -->
        <Border Grid.Row="1" Background="#F8F9FA" BorderBrush="#E9ECEF"
               BorderThickness="0,0,0,1" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Links -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="Total Links" FontSize="11" Foreground="#6C757D"/>
                    <TextBlock Name="txtTotalLinks" Text="0" FontSize="20"
                              FontWeight="Bold" Foreground="#495057"/>
                </StackPanel>

                <!-- Anonymous -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="Anonymous" FontSize="11" Foreground="#6C757D"/>
                    <TextBlock Name="txtAnonymousLinks" Text="0" FontSize="20"
                              FontWeight="Bold" Foreground="#DC3545"/>
                </StackPanel>

                <!-- Company-wide -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="Company-wide" FontSize="11" Foreground="#6C757D"/>
                    <TextBlock Name="txtOrganizationLinks" Text="0" FontSize="20"
                              FontWeight="Bold" Foreground="#FFC107"/>
                </StackPanel>

                <!-- Specific People -->
                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock Text="Specific People" FontSize="11" Foreground="#6C757D"/>
                    <TextBlock Name="txtSpecificLinks" Text="0" FontSize="20"
                              FontWeight="Bold" Foreground="#28A745"/>
                </StackPanel>

                <!-- Total Recipients -->
                <StackPanel Grid.Column="4" HorizontalAlignment="Center">
                    <TextBlock Text="Total Recipients" FontSize="11" Foreground="#6C757D"/>
                    <TextBlock Name="txtTotalRecipients" Text="0" FontSize="20"
                              FontWeight="Bold" Foreground="#007ACC"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <TabControl Grid.Row="2" Margin="10">

            <!-- All Sharing Links Tab -->
            <TabItem Header="ðŸ“‹ All Sharing Links">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search and Filter Bar -->
                    <Border Grid.Row="0" Background="White" BorderBrush="#E9ECEF"
                           BorderThickness="1" Padding="10" Margin="0,0,0,10" CornerRadius="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Search Box -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,10,0">
                                <TextBlock Text="ðŸ”" FontSize="14" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox Name="txtSearch" Width="250" Height="25"
                                        VerticalContentAlignment="Center"/>
                            </StackPanel>

                            <!-- Link Type Filter -->
                            <ComboBox Grid.Column="1" Name="cboLinkTypeFilter" Height="25" Margin="0,0,10,0">
                                <ComboBoxItem Content="All Link Types" IsSelected="True"/>
                                <ComboBoxItem Content="Anonymous"/>
                                <ComboBoxItem Content="Company-wide"/>
                                <ComboBoxItem Content="Specific People"/>
                            </ComboBox>

                            <!-- Access Filter -->
                            <ComboBox Grid.Column="2" Name="cboAccessFilter" Height="25">
                                <ComboBoxItem Content="All Access Levels" IsSelected="True"/>
                                <ComboBoxItem Content="View"/>
                                <ComboBoxItem Content="Edit"/>
                                <ComboBoxItem Content="Full Control"/>
                            </ComboBox>
                        </Grid>
                    </Border>

                    <!-- Sharing Links DataGrid -->
                    <DataGrid Grid.Row="1" Name="dgSharingLinks" AutoGenerateColumns="False"
                             CanUserSortColumns="True" GridLinesVisibility="Horizontal"
                             AlternatingRowBackground="#F8F9FA" RowHeight="35">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Group Name" Binding="{Binding GroupName}" Width="200"/>
                            <DataGridTextColumn Header="Link Type" Binding="{Binding LinkType}" Width="120"/>
                            <DataGridTextColumn Header="Access Level" Binding="{Binding AccessLevel}" Width="120"/>
                            <DataGridTextColumn Header="Member Count" Binding="{Binding MemberCount}" Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Site Title" Binding="{Binding SiteTitle}" Width="200"/>
                            <DataGridTextColumn Header="Created Date" Binding="{Binding CreatedDate}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Link Distribution Tab -->
            <TabItem Header="ðŸ“Š Link Distribution">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="250"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Distribution Chart -->
                    <Border Grid.Row="0" Background="White" BorderBrush="#E9ECEF"
                           BorderThickness="1" Padding="15" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="Sharing Link Distribution by Type" FontSize="14"
                                      FontWeight="Bold" Margin="0,0,0,10"/>
                            <Canvas Name="canvasLinkDistribution" Height="200" Background="#FAFAFA"/>
                        </StackPanel>
                    </Border>

                    <!-- Link Breakdown -->
                    <Border Grid.Row="1" Background="White" BorderBrush="#E9ECEF"
                           BorderThickness="1" Padding="15" Margin="0,10,0,0" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="Link Type Breakdown" FontSize="14"
                                      FontWeight="Bold" Margin="0,0,0,10"/>
                            <DataGrid Name="dgLinkBreakdown" Height="200" AutoGenerateColumns="False"
                                     GridLinesVisibility="None" IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Link Type" Binding="{Binding LinkType}" Width="*"/>
                                    <DataGridTextColumn Header="Count" Binding="{Binding Count}" Width="100"/>
                                    <DataGridTextColumn Header="Percentage" Binding="{Binding Percentage}" Width="100"/>
                                    <DataGridTextColumn Header="Total Recipients" Binding="{Binding TotalRecipients}" Width="120"/>
                                    <DataGridTemplateColumn Header="Visual" Width="150">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ProgressBar Value="{Binding PercentageValue}"
                                                           Maximum="100" Height="15"
                                                           Foreground="{Binding BarColor}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Security Findings Tab -->
            <TabItem Header="ðŸš¨ Security Findings">
                <ScrollViewer Margin="10">
                    <StackPanel>
                        <!-- Security Summary -->
                        <Border Background="White" BorderBrush="#E9ECEF"
                               BorderThickness="1" Padding="15" Margin="0,0,0,10" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="Security Risk Summary" FontSize="14"
                                          FontWeight="Bold" Margin="0,0,0,10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- High Risk Links -->
                                    <Border Grid.Column="0" Background="#FFEBEE" Padding="10"
                                           Margin="0,0,5,0" CornerRadius="5">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="ðŸš¨" FontSize="24"/>
                                            <TextBlock Name="txtHighRiskLinks" Text="0" FontSize="20"
                                                      FontWeight="Bold" Foreground="#C62828"/>
                                            <TextBlock Text="High Risk" FontSize="11"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Medium Risk Links -->
                                    <Border Grid.Column="1" Background="#FFF3E0" Padding="10"
                                           Margin="5,0,5,0" CornerRadius="5">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="âš ï¸" FontSize="24"/>
                                            <TextBlock Name="txtMediumRiskLinks" Text="0" FontSize="20"
                                                      FontWeight="Bold" Foreground="#F57C00"/>
                                            <TextBlock Text="Medium Risk" FontSize="11"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Low Risk Links -->
                                    <Border Grid.Column="2" Background="#E8F5E9" Padding="10"
                                           Margin="5,0,0,0" CornerRadius="5">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="âœ…" FontSize="24"/>
                                            <TextBlock Name="txtLowRiskLinks" Text="0" FontSize="20"
                                                      FontWeight="Bold" Foreground="#2E7D32"/>
                                            <TextBlock Text="Low Risk" FontSize="11"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Security Findings List -->
                        <Border Background="White" BorderBrush="#E9ECEF"
                               BorderThickness="1" Padding="15" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="Security Findings and Recommendations" FontSize="14"
                                          FontWeight="Bold" Margin="0,0,0,10"/>
                                <ListBox Name="lstSecurityFindings" Height="250" BorderThickness="0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="10" Margin="0,2" CornerRadius="5"
                                                   Background="{Binding SeverityColor}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="30"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="{Binding Icon}"
                                                              FontSize="16" VerticalAlignment="Top"/>
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="{Binding Finding}" FontWeight="Bold"
                                                                  Foreground="White"/>
                                                        <TextBlock Text="{Binding Detail}" Foreground="White"
                                                                  TextWrapping="Wrap" Margin="0,2"/>
                                                        <TextBlock Text="{Binding Recommendation}"
                                                                  Foreground="White" Opacity="0.9"
                                                                  FontStyle="Italic" TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#F8F9FA" BorderBrush="#E9ECEF"
               BorderThickness="0,1,0,0" Padding="10">
            <Grid>
                <TextBlock Name="txtStatus" Text="Ready" FontSize="11"
                          Foreground="#6C757D" HorizontalAlignment="Left"/>
                <TextBlock Name="txtLastUpdate" Text="Last updated: Never" FontSize="11"
                          Foreground="#6C757D" HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>
</Window>