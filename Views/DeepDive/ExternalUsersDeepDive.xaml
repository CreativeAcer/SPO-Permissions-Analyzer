<!-- Views/DeepDive/ExternalUsersDeepDive.xaml -->
<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="External Users Deep Dive Analysis" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#DC3545" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸŒ" FontSize="24" Foreground="White" Margin="0,0,10,0"/>
                    <StackPanel>
                        <TextBlock Text="External Users Deep Dive"
                                  FontSize="18" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Name="txtExternalCount" Text="Analyzing 0 external users"
                                  FontSize="12" Foreground="White" Opacity="0.9"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Name="btnRefreshData" Content="ðŸ”„ Refresh"
                           Width="100" Height="30" Margin="0,0,10,0"
                           Background="#28A745" Foreground="White" FontWeight="SemiBold"/>
                    <Button Name="btnExport" Content="ðŸ“Š Export"
                           Width="100" Height="30"
                           Background="#17A2B8" Foreground="White" FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Summary Stats -->
        <Border Grid.Row="1" Background="#F8F9FA" BorderBrush="#E9ECEF"
               BorderThickness="0,0,0,1" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="External Users" FontSize="11" Foreground="#6C757D"/>
                    <TextBlock Name="txtTotalExternal" Text="0" FontSize="20"
                              FontWeight="Bold" Foreground="#DC3545"/>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="External Domains" FontSize="11" Foreground="#6C757D"/>
                    <TextBlock Name="txtExternalDomains" Text="0" FontSize="20"
                              FontWeight="Bold" Foreground="#FFC107"/>
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="Sites Accessed" FontSize="11" Foreground="#6C757D"/>
                    <TextBlock Name="txtSitesAccessed" Text="0" FontSize="20"
                              FontWeight="Bold" Foreground="#007ACC"/>
                </StackPanel>

                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock Text="With Edit Access" FontSize="11" Foreground="#6C757D"/>
                    <TextBlock Name="txtEditAccess" Text="0" FontSize="20"
                              FontWeight="Bold" Foreground="#DC3545"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <TabControl Grid.Row="2" Margin="10">

            <!-- External Users List Tab -->
            <TabItem Header="ðŸ“‹ External Users">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search and Filter Bar -->
                    <Border Grid.Row="0" Background="White" BorderBrush="#E9ECEF"
                           BorderThickness="1" Padding="10" Margin="0,0,0,10" CornerRadius="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,10,0">
                                <TextBlock Text="ðŸ”" FontSize="14" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox Name="txtSearch" Width="250" Height="25"
                                        VerticalContentAlignment="Center"/>
                            </StackPanel>

                            <ComboBox Grid.Column="1" Name="cboDomainFilter" Height="25">
                                <ComboBoxItem Content="All Domains" IsSelected="True"/>
                            </ComboBox>
                        </Grid>
                    </Border>

                    <!-- External Users DataGrid -->
                    <DataGrid Grid.Row="1" Name="dgExternalUsers" AutoGenerateColumns="False"
                             CanUserSortColumns="True" GridLinesVisibility="Horizontal"
                             AlternatingRowBackground="#FFF5F5" RowHeight="35" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="180"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="220"/>
                            <DataGridTextColumn Header="Domain" Binding="{Binding Domain}" Width="150"/>
                            <DataGridTextColumn Header="Permission" Binding="{Binding Permission}" Width="120"/>
                            <DataGridTextColumn Header="Site" Binding="{Binding Site}" Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Domain Analysis Tab -->
            <TabItem Header="ðŸ¢ Domain Analysis">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="250"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Domain Chart -->
                    <Border Grid.Row="0" Background="White" BorderBrush="#E9ECEF"
                           BorderThickness="1" Padding="15" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="External Users by Domain" FontSize="14"
                                      FontWeight="Bold" Margin="0,0,0,10"/>
                            <Canvas Name="canvasDomainChart" Height="180" Background="#FAFAFA"/>
                        </StackPanel>
                    </Border>

                    <!-- Domain Details -->
                    <Border Grid.Row="1" Background="White" BorderBrush="#E9ECEF"
                           BorderThickness="1" Padding="15" Margin="0,10,0,0" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="Domain Breakdown" FontSize="14"
                                      FontWeight="Bold" Margin="0,0,0,10"/>
                            <DataGrid Name="dgDomains" Height="200" AutoGenerateColumns="False"
                                     GridLinesVisibility="None" IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Domain" Binding="{Binding Domain}" Width="*"/>
                                    <DataGridTextColumn Header="Users" Binding="{Binding UserCount}" Width="80"/>
                                    <DataGridTextColumn Header="% of External" Binding="{Binding Percentage}" Width="120"/>
                                    <DataGridTemplateColumn Header="Distribution" Width="150">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ProgressBar Value="{Binding PercentageValue}"
                                                           Maximum="100" Height="15"
                                                           Foreground="{Binding BarColor}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Security Audit Tab -->
            <TabItem Header="ðŸ”’ Security Audit">
                <ScrollViewer Margin="10">
                    <StackPanel>
                        <Border Background="White" BorderBrush="#E9ECEF"
                               BorderThickness="1" Padding="15" Margin="0,0,0,10" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="External Access Risk Assessment" FontSize="14"
                                          FontWeight="Bold" Margin="0,0,0,10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" Background="#E8F5E9" Padding="10"
                                           Margin="0,0,5,0" CornerRadius="5">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="âœ…" FontSize="24"/>
                                            <TextBlock Name="txtReadOnly" Text="0" FontSize="20"
                                                      FontWeight="Bold" Foreground="#2E7D32"/>
                                            <TextBlock Text="Read Only" FontSize="11"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Grid.Column="1" Background="#FFF3E0" Padding="10"
                                           Margin="5,0,5,0" CornerRadius="5">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="âš ï¸" FontSize="24"/>
                                            <TextBlock Name="txtCanEdit" Text="0" FontSize="20"
                                                      FontWeight="Bold" Foreground="#F57C00"/>
                                            <TextBlock Text="Can Edit" FontSize="11"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Grid.Column="2" Background="#FFEBEE" Padding="10"
                                           Margin="5,0,0,0" CornerRadius="5">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="ðŸš¨" FontSize="24"/>
                                            <TextBlock Name="txtFullControl" Text="0" FontSize="20"
                                                      FontWeight="Bold" Foreground="#C62828"/>
                                            <TextBlock Text="Full Control" FontSize="11"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Border Background="White" BorderBrush="#E9ECEF"
                               BorderThickness="1" Padding="15" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="External Access Findings" FontSize="14"
                                          FontWeight="Bold" Margin="0,0,0,10"/>
                                <ListBox Name="lstAuditFindings" Height="250" BorderThickness="0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="10" Margin="0,2" CornerRadius="5"
                                                   Background="{Binding SeverityColor}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="30"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="{Binding Icon}"
                                                              FontSize="16" VerticalAlignment="Top"/>
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="{Binding Finding}" FontWeight="Bold"
                                                                  Foreground="White"/>
                                                        <TextBlock Text="{Binding Detail}" Foreground="White"
                                                                  TextWrapping="Wrap" Margin="0,2"/>
                                                        <TextBlock Text="{Binding Recommendation}"
                                                                  Foreground="White" Opacity="0.9"
                                                                  FontStyle="Italic" TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#F8F9FA" BorderBrush="#E9ECEF"
               BorderThickness="0,1,0,0" Padding="10">
            <Grid>
                <TextBlock Name="txtStatus" Text="Ready" FontSize="11"
                          Foreground="#6C757D" HorizontalAlignment="Left"/>
                <TextBlock Name="txtLastUpdate" Text="Last updated: Never" FontSize="11"
                          Foreground="#6C757D" HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>
</Window>
