<!-- Views/DeepDive/GroupsDeepDive.xaml -->
<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Groups Deep Dive Analysis" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#0078D4" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸ‘¥" FontSize="24" Foreground="White" Margin="0,0,10,0"/>
                    <StackPanel>
                        <TextBlock Text="Groups Deep Dive Analysis"
                                  FontSize="18" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Name="txtGroupCount" Text="Analyzing 0 groups"
                                  FontSize="12" Foreground="White" Opacity="0.9"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Name="btnRefreshData" Content="ðŸ”„ Refresh"
                           Width="100" Height="30" Margin="0,0,10,0"
                           Background="#28A745" Foreground="White" FontWeight="SemiBold"/>
                    <Button Name="btnExport" Content="ðŸ“Š Export"
                           Width="100" Height="30"
                           Background="#17A2B8" Foreground="White" FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Summary Stats -->
        <Border Grid.Row="1" Background="#F8F9FA" BorderBrush="#E9ECEF"
               BorderThickness="0,0,0,1" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="Total Groups" FontSize="11" Foreground="#6C757D"/>
                    <TextBlock Name="txtTotalGroups" Text="0" FontSize="20"
                              FontWeight="Bold" Foreground="#495057"/>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="Total Members" FontSize="11" Foreground="#6C757D"/>
                    <TextBlock Name="txtTotalMembers" Text="0" FontSize="20"
                              FontWeight="Bold" Foreground="#007ACC"/>
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="Avg Members/Group" FontSize="11" Foreground="#6C757D"/>
                    <TextBlock Name="txtAvgMembers" Text="0" FontSize="20"
                              FontWeight="Bold" Foreground="#17A2B8"/>
                </StackPanel>

                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock Text="Empty Groups" FontSize="11" Foreground="#6C757D"/>
                    <TextBlock Name="txtEmptyGroups" Text="0" FontSize="20"
                              FontWeight="Bold" Foreground="#FFC107"/>
                </StackPanel>

                <StackPanel Grid.Column="4" HorizontalAlignment="Center">
                    <TextBlock Text="Large Groups (10+)" FontSize="11" Foreground="#6C757D"/>
                    <TextBlock Name="txtLargeGroups" Text="0" FontSize="20"
                              FontWeight="Bold" Foreground="#DC3545"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <TabControl Grid.Row="2" Margin="10">

            <!-- All Groups Tab -->
            <TabItem Header="ðŸ“‹ All Groups">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search and Filter Bar -->
                    <Border Grid.Row="0" Background="White" BorderBrush="#E9ECEF"
                           BorderThickness="1" Padding="10" Margin="0,0,0,10" CornerRadius="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,10,0">
                                <TextBlock Text="ðŸ”" FontSize="14" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox Name="txtSearch" Width="250" Height="25"
                                        VerticalContentAlignment="Center"/>
                            </StackPanel>

                            <ComboBox Grid.Column="1" Name="cboSizeFilter" Height="25">
                                <ComboBoxItem Content="All Sizes" IsSelected="True"/>
                                <ComboBoxItem Content="Empty (0 members)"/>
                                <ComboBoxItem Content="Small (1-5 members)"/>
                                <ComboBoxItem Content="Medium (6-10 members)"/>
                                <ComboBoxItem Content="Large (10+ members)"/>
                            </ComboBox>
                        </Grid>
                    </Border>

                    <!-- Groups DataGrid -->
                    <DataGrid Grid.Row="1" Name="dgGroups" AutoGenerateColumns="False"
                             CanUserSortColumns="True" GridLinesVisibility="Horizontal"
                             AlternatingRowBackground="#F8F9FA" RowHeight="35" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Group Name" Binding="{Binding GroupName}" Width="200"/>
                            <DataGridTextColumn Header="Owner" Binding="{Binding Owner}" Width="180"/>
                            <DataGridTextColumn Header="Members" Binding="{Binding MemberCount}" Width="80"/>
                            <DataGridTextColumn Header="Permission" Binding="{Binding Permission}" Width="130"/>
                            <DataGridTextColumn Header="Site" Binding="{Binding Site}" Width="180"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding GroupType}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Membership Analysis Tab -->
            <TabItem Header="ðŸ“Š Membership Analysis">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="250"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Member Distribution Chart -->
                    <Border Grid.Row="0" Background="White" BorderBrush="#E9ECEF"
                           BorderThickness="1" Padding="15" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="Group Size Distribution" FontSize="14"
                                      FontWeight="Bold" Margin="0,0,0,10"/>
                            <Canvas Name="canvasMemberDistribution" Height="180" Background="#FAFAFA"/>
                        </StackPanel>
                    </Border>

                    <!-- Largest Groups -->
                    <Border Grid.Row="1" Background="White" BorderBrush="#E9ECEF"
                           BorderThickness="1" Padding="15" Margin="0,10,0,0" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="Largest Groups by Membership" FontSize="14"
                                      FontWeight="Bold" Margin="0,0,0,10"/>
                            <DataGrid Name="dgLargestGroups" Height="200" AutoGenerateColumns="False"
                                     GridLinesVisibility="None" IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Rank" Binding="{Binding Rank}" Width="50"/>
                                    <DataGridTextColumn Header="Group" Binding="{Binding GroupName}" Width="*"/>
                                    <DataGridTextColumn Header="Members" Binding="{Binding MemberCount}" Width="80"/>
                                    <DataGridTextColumn Header="% of All Members" Binding="{Binding Percentage}" Width="120"/>
                                    <DataGridTemplateColumn Header="Visual" Width="150">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ProgressBar Value="{Binding PercentageValue}"
                                                           Maximum="100" Height="15"
                                                           Foreground="{Binding BarColor}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Group Health Tab -->
            <TabItem Header="ðŸ¥ Group Health">
                <ScrollViewer Margin="10">
                    <StackPanel>
                        <Border Background="White" BorderBrush="#E9ECEF"
                               BorderThickness="1" Padding="15" Margin="0,0,0,10" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="Group Health Summary" FontSize="14"
                                          FontWeight="Bold" Margin="0,0,0,10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" Background="#E8F5E9" Padding="10"
                                           Margin="0,0,5,0" CornerRadius="5">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="âœ…" FontSize="24"/>
                                            <TextBlock Name="txtHealthyGroups" Text="0" FontSize="20"
                                                      FontWeight="Bold" Foreground="#2E7D32"/>
                                            <TextBlock Text="Healthy Groups" FontSize="11"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Grid.Column="1" Background="#FFF3E0" Padding="10"
                                           Margin="5,0,5,0" CornerRadius="5">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="âš ï¸" FontSize="24"/>
                                            <TextBlock Name="txtWarningGroups" Text="0" FontSize="20"
                                                      FontWeight="Bold" Foreground="#F57C00"/>
                                            <TextBlock Text="Need Attention" FontSize="11"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Grid.Column="2" Background="#FFEBEE" Padding="10"
                                           Margin="5,0,0,0" CornerRadius="5">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="ðŸš¨" FontSize="24"/>
                                            <TextBlock Name="txtCriticalGroups" Text="0" FontSize="20"
                                                      FontWeight="Bold" Foreground="#C62828"/>
                                            <TextBlock Text="Critical Issues" FontSize="11"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Border Background="White" BorderBrush="#E9ECEF"
                               BorderThickness="1" Padding="15" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="Group Issues and Recommendations" FontSize="14"
                                          FontWeight="Bold" Margin="0,0,0,10"/>
                                <ListBox Name="lstGroupIssues" Height="250" BorderThickness="0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="10" Margin="0,2" CornerRadius="5"
                                                   Background="{Binding SeverityColor}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="30"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="{Binding Icon}"
                                                              FontSize="16" VerticalAlignment="Top"/>
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="{Binding Group}" FontWeight="Bold"
                                                                  Foreground="White"/>
                                                        <TextBlock Text="{Binding Issue}" Foreground="White"
                                                                  TextWrapping="Wrap" Margin="0,2"/>
                                                        <TextBlock Text="{Binding Recommendation}"
                                                                  Foreground="White" Opacity="0.9"
                                                                  FontStyle="Italic" TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#F8F9FA" BorderBrush="#E9ECEF"
               BorderThickness="0,1,0,0" Padding="10">
            <Grid>
                <TextBlock Name="txtStatus" Text="Ready" FontSize="11"
                          Foreground="#6C757D" HorizontalAlignment="Left"/>
                <TextBlock Name="txtLastUpdate" Text="Last updated: Never" FontSize="11"
                          Foreground="#6C757D" HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>
</Window>
